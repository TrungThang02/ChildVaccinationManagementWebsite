<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        html, body {
            height: 100%;
            background-color: #f8f9fa; /* Màu nền trắng */
        }

        .sidebar {
            height: 100vh; /* 100% chiều cao của viewport */
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000; /* Đảm bảo sidebar hiển thị trên tất cả các phần khác */
            overflow-x: hidden; /* Ngăn chặn tràn ngang */
            padding-top: 20px; /* Khoảng cách từ đỉnh màn hình */
            background-color: #ffffff; /* Màu nền trắng */
            border-right: 1px solid #dee2e6; /* Đường viền phía bên phải */
        }

        .main-content {
            margin-left: 250px; /* Chiều rộng của sidebar */
            padding: 20px;
        }

        .nav-link {
            padding: 10px;
            color: #333; /* Màu chữ */
        }

            .nav-link:hover {
                background-color: #e9ecef; /* Màu nền khi hover */
            }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-3 col-lg-2 bg-light sidebar">
                <div class="sidebar-sticky">
                    <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                        QUẢN LÝ TIÊM CHỦNG
                    </h6>
                    <ul class="nav flex-column mb-2">
                        <li class="nav-item">
                            <a href="/Appointments/LichTiem" class="nav-link">Quản lý lịch tiêm</a>
                        </li>
                        <li class="nav-item">
                            <a href="/MakeAppointment/LichTiemDaDat" class="nav-link">Lịch tiêm đã đặt</a>
                        </li>
                        <li class="nav-item">
                            <a href="/Vaccinelist/Index" class="nav-link">Thông tin vaccine</a>
                        </li>
                        <li class="nav-item">
                            <a href="/News/Index" class="nav-link">Tin tức tiêm chủng</a>
                        </li>
                    </ul>
                </div>
            </nav>

            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 main-content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
